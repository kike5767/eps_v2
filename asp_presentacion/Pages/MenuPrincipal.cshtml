@page
@model asp_presentacion.Pages.MenuPrincipalModel
@{
    ViewData["Title"] = "Menú Principal - Sistema EPS";
}

<div class="container-fluid mt-4">
    <!-- Header Principal -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #7B2CBF 0%, #5A189A 100%);">
                    <h1 class="mb-0">
                        <i class="bi bi-menu-button-wide"></i> Menú Principal del Sistema
                    </h1>
                    <p class="mb-0 mt-2">Seleccione una opción para ejecutar procesos del sistema</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Menú Principal con Opciones Numeradas -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg">
                <div class="card-header text-white" style="background: linear-gradient(135deg, #5A189A 0%, #7B2CBF 100%);">
                    <h3 class="mb-0">
                        <i class="bi bi-list-ol"></i> Opciones del Sistema
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="bi bi-info-circle"></i> @TempData["Info"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Formulario de Selección -->
                    <form method="post" asp-page-handler="EjecutarOpcion" class="mb-4" id="formOpcion">
                        <div class="row mb-3">
                            <div class="col-md-8">
                                <label for="opcion" class="form-label fw-bold">
                                    <i class="bi bi-keyboard"></i> Ingrese el número de la opción:
                                </label>
                                <input type="number" class="form-control form-control-lg" id="opcion" name="opcion" 
                                       min="1" max="99" required autofocus placeholder="Ejemplo: 1, 2, 3...">
                            </div>
                            <div class="col-md-4 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary btn-lg w-100" id="btnEjecutar">
                                    <i class="bi bi-play-circle"></i> Ejecutar
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Opciones de Entrada/Salida -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <form method="post" asp-page-handler="EntrarSistema" id="formEntrar" style="display: none;">
                            </form>
                            <button type="button" class="btn btn-success btn-lg w-100" onclick="confirmarEntrada()" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%); border: none;">
                                <i class="bi bi-box-arrow-in-right"></i> ENTRAR AL SISTEMA
                            </button>
                        </div>
                        <div class="col-md-6">
                            <form method="post" asp-page-handler="SalirSistema" id="formSalir" style="display: none;">
                            </form>
                            <form method="post" asp-page-handler="GuardadoAutomatico" id="formGuardado" style="display: none;">
                            </form>
                            <button type="button" class="btn btn-danger btn-lg w-100" onclick="confirmarSalida()" style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%); border: none;">
                                <i class="bi bi-box-arrow-right"></i> SALIR DEL SISTEMA
                            </button>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Lista de Opciones -->
                    <div class="row">
                        <!-- Grupo 1: Gestión de Afiliados -->
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-people-fill"></i> Gestión de Afiliados
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>1.</strong> Listar Afiliados</span>
                                            <a asp-page="/Afiliados" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-arrow-right"></i>
                                            </a>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>2.</strong> Nuevo Afiliado</span>
                                            <a asp-page="/Afiliados" asp-page-handler="Nuevo" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-arrow-right"></i>
                                            </a>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>3.</strong> Buscar Afiliado</span>
                                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="ejecutarOpcion(3)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>4.</strong> Reportes de Afiliados</span>
                                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="ejecutarOpcion(4)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Grupo 2: Backup y Respaldo -->
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-database-check"></i> Backup y Respaldo
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>5.</strong> Backup Completo</span>
                                            <button type="button" class="btn btn-sm btn-outline-success" onclick="confirmarBackup(5)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>6.</strong> Backup SQL Server</span>
                                            <button type="button" class="btn btn-sm btn-outline-success" onclick="confirmarBackup(6)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>7.</strong> Datos Generales</span>
                                            <button type="button" class="btn btn-sm btn-outline-success" onclick="confirmarBackup(7)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>8.</strong> Sincronizar GitHub</span>
                                            <button type="button" class="btn btn-sm btn-outline-success" onclick="confirmarBackup(8)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Grupo 3: Auditoría y Logs -->
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-file-earmark-text"></i> Auditoría y Logs
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>9.</strong> Ver Logs de Auditoría</span>
                                            <button type="button" class="btn btn-sm btn-outline-info" onclick="ejecutarOpcion(9)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>10.</strong> Ver Validaciones</span>
                                            <button type="button" class="btn btn-sm btn-outline-info" onclick="ejecutarOpcion(10)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>11.</strong> Ver Errores</span>
                                            <button type="button" class="btn btn-sm btn-outline-info" onclick="ejecutarOpcion(11)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>12.</strong> Exportar Logs</span>
                                            <button type="button" class="btn btn-sm btn-outline-info" onclick="ejecutarOpcion(12)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Grupo 4: Configuración -->
                        <div class="col-md-6 mb-3">
                            <div class="card h-100 border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="bi bi-gear-fill"></i> Configuración
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>13.</strong> Configuración del Sistema</span>
                                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="ejecutarOpcion(13)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>14.</strong> Usuarios y Permisos</span>
                                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="ejecutarOpcion(14)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>15.</strong> Base de Datos</span>
                                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="ejecutarOpcion(15)">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <span><strong>16.</strong> Guardado Automático</span>
                                            <button type="button" class="btn btn-sm btn-outline-warning" onclick="confirmarGuardado()">
                                                <i class="bi bi-arrow-right"></i>
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Panel de Información -->
                    <div class="card mt-4 border-secondary">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle"></i> Información del Sistema
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="p-3 rounded" style="background: #E0AAFF;">
                                        <h4 class="mb-0" style="color: #5A189A;">@Model.TotalAfiliados</h4>
                                        <small style="color: #5A189A;">Afiliados</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 rounded" style="background: #C77DFF;">
                                        <h4 class="mb-0" style="color: white;">@Model.TotalBackups</h4>
                                        <small style="color: white;">Backups</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 rounded" style="background: #9D4EDD;">
                                        <h4 class="mb-0" style="color: white;">@Model.TotalLogs</h4>
                                        <small style="color: white;">Logs Hoy</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 rounded" style="background: #7B2CBF;">
                                        <h4 class="mb-0" style="color: white;">@Model.UltimaActualizacion</h4>
                                        <small style="color: white;">Última Actualización</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación -->
<div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="modalConfirmacionLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="border: 3px solid #7B2CBF; border-radius: 15px;">
            <div class="modal-header text-white" style="background: linear-gradient(135deg, #7B2CBF 0%, #5A189A 100%); border-radius: 12px 12px 0 0;">
                <h5 class="modal-title" id="modalConfirmacionLabel">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmación Requerida
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center p-4">
                <div class="mb-3">
                    <i class="bi bi-shield-check" style="font-size: 4rem; color: #7B2CBF;"></i>
                </div>
                <h4 class="mb-3" id="mensajeConfirmacion">¿Está seguro de realizar esta operación?</h4>
                <p class="text-muted" id="detalleConfirmacion">Esta acción no se puede deshacer.</p>
                <div class="mt-4">
                    <div class="input-group input-group-lg">
                        <span class="input-group-text" style="background: #7B2CBF; color: white;">
                            <i class="bi bi-keyboard"></i>
                        </span>
                        <input type="text" class="form-control text-center fw-bold" id="confirmacionInput" 
                               placeholder="Ingrese S (Sí) o N (No)" maxlength="1" 
                               style="font-size: 1.5rem; text-transform: uppercase;">
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="background: #f8f9fa; border-radius: 0 0 12px 12px;">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                <button type="button" class="btn btn-success" id="btnConfirmarSi" onclick="procesarConfirmacion('S')">
                    <i class="bi bi-check-circle"></i> Sí (S)
                </button>
                <button type="button" class="btn btn-danger" id="btnConfirmarNo" onclick="procesarConfirmacion('N')">
                    <i class="bi bi-x-circle"></i> No (N)
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    let opcionPendiente = null;
    let accionPendiente = null;

    // Función para ejecutar opción desde botones
    function ejecutarOpcion(numero) {
        // Verifica si requiere confirmación
        if (numero >= 5 && numero <= 8 || numero === 16) {
            confirmarBackup(numero);
        } else {
            document.getElementById('opcion').value = numero;
            document.getElementById('formOpcion').submit();
        }
    }

    // Función para confirmar operaciones de backup
    function confirmarBackup(numero) {
        opcionPendiente = numero;
        accionPendiente = 'backup';
        
        let mensajes = {
            5: '¿Está seguro de generar un Backup Completo?',
            6: '¿Está seguro de generar un Backup de SQL Server?',
            7: '¿Está seguro de generar un Backup de Datos Generales?',
            8: '¿Está seguro de sincronizar con GitHub?'
        };
        
        document.getElementById('mensajeConfirmacion').textContent = mensajes[numero] || '¿Está seguro de realizar esta operación?';
        document.getElementById('detalleConfirmacion').textContent = 'Esta acción puede tomar varios minutos.';
        
        const modal = new bootstrap.Modal(document.getElementById('modalConfirmacion'));
        modal.show();
        
        // Focus en el input de confirmación
        setTimeout(() => {
            document.getElementById('confirmacionInput').focus();
        }, 500);
    }

    // Función para confirmar guardado automático
    function confirmarGuardado() {
        opcionPendiente = 16;
        accionPendiente = 'guardado';
        
        document.getElementById('mensajeConfirmacion').textContent = '¿Está seguro de ejecutar el Guardado Automático?';
        document.getElementById('detalleConfirmacion').textContent = 'Se generará backup y se actualizará GitHub.';
        
        const modal = new bootstrap.Modal(document.getElementById('modalConfirmacion'));
        modal.show();
        
        setTimeout(() => {
            document.getElementById('confirmacionInput').focus();
        }, 500);
    }

    // Función para confirmar entrada al sistema
    function confirmarEntrada() {
        accionPendiente = 'entrar';
        document.getElementById('mensajeConfirmacion').textContent = '¿Está seguro de ENTRAR al sistema?';
        document.getElementById('detalleConfirmacion').textContent = 'Se iniciará la sesión del sistema.';
        
        const modal = new bootstrap.Modal(document.getElementById('modalConfirmacion'));
        modal.show();
        
        setTimeout(() => {
            document.getElementById('confirmacionInput').focus();
        }, 500);
    }

    // Función para confirmar salida del sistema
    function confirmarSalida() {
        accionPendiente = 'salir';
        document.getElementById('mensajeConfirmacion').textContent = '¿Está seguro de SALIR del sistema?';
        document.getElementById('detalleConfirmacion').textContent = 'Se generará backup automático (1 por día) y se cerrará el sistema.';
        
        const modal = new bootstrap.Modal(document.getElementById('modalConfirmacion'));
        modal.show();
        
        setTimeout(() => {
            document.getElementById('confirmacionInput').focus();
        }, 500);
    }

    // Procesa la confirmación S/N
    function procesarConfirmacion(respuesta) {
        const input = document.getElementById('confirmacionInput');
        const valor = input.value.toUpperCase().trim();
        
        if (valor === 'S' || respuesta === 'S') {
            // Usuario confirmó
            if (accionPendiente === 'backup' && opcionPendiente) {
                // Ejecuta la opción de backup
                document.getElementById('opcion').value = opcionPendiente;
                document.getElementById('formOpcion').submit();
            } else if (accionPendiente === 'guardado') {
                // Ejecuta guardado automático
                document.getElementById('formGuardado').submit();
            } else if (accionPendiente === 'entrar') {
                // Ejecuta entrada
                document.getElementById('formEntrar').submit();
            } else if (accionPendiente === 'salir') {
                // Ejecuta salida con backup
                document.getElementById('formSalir').submit();
            }
            
            // Cierra el modal
            bootstrap.Modal.getInstance(document.getElementById('modalConfirmacion')).hide();
        } else if (valor === 'N' || respuesta === 'N') {
            // Usuario canceló
            bootstrap.Modal.getInstance(document.getElementById('modalConfirmacion')).hide();
            alert('Operación cancelada.');
        } else {
            alert('Por favor ingrese S (Sí) o N (No)');
            input.focus();
        }
    }

    // Atajos de teclado
    document.addEventListener('keydown', function(e) {
        // Enter en el campo de opción ejecuta
        if (e.target.id === 'opcion' && e.key === 'Enter') {
            e.preventDefault();
            const numero = parseInt(document.getElementById('opcion').value);
            if (numero >= 5 && numero <= 8 || numero === 16) {
                confirmarBackup(numero);
            } else {
                document.getElementById('formOpcion').submit();
            }
        }
        
        // En el modal, Enter procesa confirmación
        if (e.target.id === 'confirmacionInput' && e.key === 'Enter') {
            e.preventDefault();
            procesarConfirmacion(e.target.value.toUpperCase());
        }
        
        // S o N en el modal
        if (e.target.id === 'confirmacionInput' && (e.key.toUpperCase() === 'S' || e.key.toUpperCase() === 'N')) {
            setTimeout(() => procesarConfirmacion(e.key.toUpperCase()), 100);
        }
        
        // Números 1-9 ejecutan directamente (si no requiere confirmación)
        if (e.key >= '1' && e.key <= '9' && e.target.id !== 'opcion' && e.target.id !== 'confirmacionInput') {
            const numero = parseInt(e.key);
            if (numero < 5 || numero > 8) {
                ejecutarOpcion(numero);
            }
        }
    });

    // Intercepta formularios de entrada/salida
    document.getElementById('formEntrar').addEventListener('submit', function(e) {
        e.preventDefault();
        confirmarEntrada();
    });

    document.getElementById('formSalir').addEventListener('submit', function(e) {
        e.preventDefault();
        confirmarSalida();
    });

    // Auto-focus en el campo de opción
    document.getElementById('opcion').focus();
</script>

