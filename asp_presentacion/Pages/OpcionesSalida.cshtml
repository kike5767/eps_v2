@page
@model asp_presentacion.Pages.OpcionesSalidaModel
@{
    ViewData["Title"] = "Opciones de Salida - Sistema EPS";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center py-3" style="background: linear-gradient(135deg, #7B2CBF 0%, #5A189A 100%);">
                    <h3 class="mb-0">
                        <i class="bi bi-box-arrow-right"></i> Opciones de Salida del Sistema
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-3">
                        <a asp-page="/MenuPrincipal" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Menú Principal
                        </a>
                    </div>

                    <div class="row">
                        <!-- Opción 1: Grabar Solo Local -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-primary">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-hdd"></i> Grabar Solo Local
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p>Guarda todos los cambios solo en el servidor local sin actualizar la nube.</p>
                                    <form method="post" asp-page-handler="GrabarLocal">
                                        <button type="submit" class="btn btn-primary w-100">
                                            <i class="bi bi-save"></i> Grabar Local
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Opción 2: Grabar Solo Nube -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-success">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-cloud-upload"></i> Grabar Solo Nube
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p>Actualiza solo el repositorio en la nube (GitHub) sin guardar localmente.</p>
                                    <form method="post" asp-page-handler="GrabarNube">
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="bi bi-cloud-upload"></i> Grabar Nube
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Opción 3: Grabar Local y Nube -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-info">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">
                                        <i class="bi bi-arrow-repeat"></i> Grabar Local y Nube
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p>Guarda cambios localmente y actualiza el repositorio en la nube simultáneamente.</p>
                                    <form method="post" asp-page-handler="GrabarLocalYNube">
                                        <button type="submit" class="btn btn-info w-100">
                                            <i class="bi bi-arrow-repeat"></i> Grabar Ambos
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <!-- Opción 4: Subir a Servidor de Alojamiento -->
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 border-warning">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="bi bi-server"></i> Subir a Servidor Gratuito
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p>Sube el proyecto a un servidor de alojamiento gratuito sin límite de tiempo.</p>
                                    <form method="post" asp-page-handler="SubirServidorGratuito">
                                        <button type="submit" class="btn btn-warning w-100">
                                            <i class="bi bi-cloud-arrow-up"></i> Subir a Servidor
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Servidores Gratuitos -->
                    <div class="card mt-4 border-secondary">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle"></i> Servidores de Alojamiento Gratuitos Disponibles
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group">
                                <a href="https://www.netlify.com" target="_blank" class="list-group-item list-group-item-action">
                                    <i class="bi bi-cloud"></i> <strong>Netlify</strong> - Alojamiento gratuito ilimitado
                                </a>
                                <a href="https://vercel.com" target="_blank" class="list-group-item list-group-item-action">
                                    <i class="bi bi-cloud"></i> <strong>Vercel</strong> - Deploy automático desde GitHub
                                </a>
                                <a href="https://pages.github.com" target="_blank" class="list-group-item list-group-item-action">
                                    <i class="bi bi-github"></i> <strong>GitHub Pages</strong> - Hosting gratuito para proyectos
                                </a>
                                <a href="https://render.com" target="_blank" class="list-group-item list-group-item-action">
                                    <i class="bi bi-cloud"></i> <strong>Render</strong> - Hosting gratuito sin límite de tiempo
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

